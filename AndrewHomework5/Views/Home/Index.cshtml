@{
    ViewData["Title"] = "Home Page";
}

@model IQueryable<Project>



<!--Looping through each book-->
@foreach (var x in Model)
{
    <div class="card card-outline-primary m-1 p-1">
        <div class="bg-faded p-1">
            <h4>
                @x.Title
                <span class="badge badge-pill badge-primary" style="float:right">
                    <small>@x.Price.ToString("c")</small>
                </span>
            </h4>
        </div>
        <div class="card-text p-1">Author: @x.AuthorFirst @x.AuthorLast</div>
        <div class="card-text p-1">Publisher: @x.Publisher</div>
        <div class="card-text p-1">ISBN: @x.ISBN</div>
        <div class="card-text p-1">Classification: @x.Classification</div>
        <div class="card-text p-1">Category: @x.Category</div>
    </div><br />
}

<div page-model="" page-action="Index" page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary" class="btn-group pull-right m-1">
</div>

<!--Validation for model-->
<div asp-validation-summary="All"></div>











